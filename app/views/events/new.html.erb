<% provide(:title, 'Crée ton évennement !') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>

      <%= f.label :description, "Quel est ton évennement ?" %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :date, "et ça se passe quand ?" %>
      <%= f.date_field :date, class: 'form-control' %>

      <%= f.label :place, "C'est où ????" %>
      <%= f.text_field :place, class: 'form-control' %>


      <%= f.submit "Créer mon évennement", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
