<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "EventBrite by Clem !", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Accueil", root_path %></li>
        <% if logged_in? %>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li class="dropdown-header">User</li>
              <li><%= link_to "Mon Profil", current_user %></li>
              <li><%= link_to "Mes Evennements" , current_user %></li>
              <li><%= link_to "Créer un évennement", new_event_url %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to "Se connecter", login_path %></li>
            <li><%= link_to "S'inscrire", new_user_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
