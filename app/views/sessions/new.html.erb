<% provide(:title, "Se connecter") %>
<h1>Se connecter</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name %>
      <%= f.name_field :name, class: 'form-control' %>

      <%= f.submit "Connection", class: "btn btn-primary" %>
    <% end %>

    <p>T'es nouveau ? <%= link_to "Inscris toi !", new_user_path %></p>
  </div>
</div>
